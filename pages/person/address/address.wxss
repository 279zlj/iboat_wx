.footer
{ 
width:100%; 
color:gray; 
position:fixed; 
bottom:0; 
display: flex;
flex-direction: row;
border-top:1px solid lightgray; 
background: white;
height: 110rpx;
} 
.foot-img{
  height: 70rpx;
  width: 70rpx;
  margin: 20rpx;
}
.foot-text{
  line-height: 100rpx;
}
.c-img{
  height: 50rpx;
  width: 50rpx;
  float: right;
  margin: 50rpx 40rpx 50rpx 0;
}
.content{
  height: 150rpx;
  width: 100%;
  border:1px solid #ccc;
}
.check{
  margin:30rpx 30rpx 0 30rpx;
}
.row{
  display: flex;
  flex-direction: row
}
.row text,.check text{
  line-height: 50rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
}
.clounm{
  display: flex;
  flex-direction: column
}